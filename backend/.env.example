# Database
DATABASE_URL="file:./dev.db"

# Server
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=8h

# CORS
FRONTEND_URL=http://localhost:3000

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (SMTP)
# Pour Gmail: smtp.gmail.com, port 587
# Pour SendGrid: smtp.sendgrid.net, port 587
# Pour Outlook: smtp-mail.outlook.com, port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre-email@gmail.com
SMTP_PASS=votre-mot-de-passe-app
ADMIN_EMAIL=admin@grandsonproject.com
CONTACT_PHONE=+224621234567
CONTACT_EMAIL=contact@grandsonproject.com
